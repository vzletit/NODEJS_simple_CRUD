{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "target": "ES2015",
    "module": "ES2020",
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}